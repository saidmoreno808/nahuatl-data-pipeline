# EditorConfig for CORC-NAH Project
# https://editorconfig.org
# Compatible with VS Code, PyCharm, Vim, Emacs, Sublime Text

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
max_line_length = 100
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files (including JSONL)
[*.{json,jsonl}]
indent_size = 2
# Don't trim trailing whitespace in JSONL (can break parsing)
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# SQL files
[*.sql]
indent_size = 2

# Markdown files
[*.md]
max_line_length = 80
# Allow trailing whitespace in markdown (2 spaces = line break)
trim_trailing_whitespace = false

# Makefiles MUST use tabs
[Makefile]
indent_style = tab

# Dockerfiles
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Windows batch files
[*.bat]
end_of_line = crlf

# PowerShell scripts
[*.ps1]
end_of_line = crlf
indent_size = 4

# CSV files (data artifacts)
[*.csv]
trim_trailing_whitespace = false
